@page
@model CrowdFoundAppTeam3.Pages.Backers.CreateModel
@{
    ViewData["Title"] = "Create Backer";
}

<h1>Create Backer</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp - validation - summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Backer.FirstName" class="control-label"></label>
                <input asp-for="Backer.FirstName" class="form-control" />
                <span asp-validation-for="Backer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Backer.LastName" class="control-label"></label>
                <input asp-for="Backer.LastName" class="form-control" />
                <span asp-validation-for="Backer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
    </div>
    </form>
</div>
 </div>
<div>
    <a asp-page="Index"> All Backers </a>
</div>
@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
